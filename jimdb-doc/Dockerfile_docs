FROM is.harbor.svc.m.n.jd.local/jdos_base/jd-new-centos7.2v0105:latest
ADD docs /opt/src/docs
RUN yum install wget -y && yum clean all && wget http://storage.jd.local/ui-work/node-v8.12.0-linux-x64.tar.xz -O /opt/src/docs/node-v8.12.0-linux-x64.tar.xz && cd /opt/src/docs && xz -d node-v8.12.0-linux-x64.tar.xz && tar -xvf node-v8.12.0-linux-x64.tar && /bin/rm node-v8.12.0-linux-x64.tar && chown -R root:root /opt/src/docs
ENV PATH /opt/src/docs/node-v8.12.0-linux-x64/bin:$PATH
ENV NODE_HOME /opt/src/docs/node-v8.12.0-linux-x64/
ENV VERSION 8.12.0
RUN cd /opt/src/docs && npm install gitbook-cli -g  && npm install -g pm2 && gitbook install && gitbook build
WORKDIR /opt/src/docs
ENTRYPOINT /usr/sbin/sshd && pm2 startOrRestart /opt/src/docs/bin/start.json && sleep 9999999d
